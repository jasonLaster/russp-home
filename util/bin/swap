tell application "MacVim"
  activate
  set vBounds to the bounds of the first window
end tell

tell application "iTerm"
  activate
  set iBounds to the bounds of the first window
end tell

tell application "MacVim"
  activate
  set the bounds of the first window to iBounds
end tell

tell application "iTerm"
  activate
  set the bounds of the first window to vBounds
end tell
